{% extends 'form-manager/_layouts/settings' %}

{% set settingsType = craft.app.request.getParam('settingsType') %}

{% block fields %}
    {% if settingsType =='general' %}
        {% include 'form-manager/settings/general' %}
    {% elseif settingsType =='antispam' %}
        {% include 'form-manager/settings/antispam' %}
    {% elseif settingsType =='recaptcha' %}
        {% include 'form-manager/settings/recaptcha' %}
    {% elseif settingsType =='exports' %}
        {% include 'form-manager/settings/exports' %}
    {% else %}
        {% redirect craft.app.request.pathInfo ~ '/general' %}
    {% endif %}
{% endblock %}
